# Server Configuration
PORT=3000
SERVER_IP=0.0.0.0

# Samsara API Configuration (Fleet Tracking)
SAMSARA_API_KEY=your_samsara_api_key_here
SAMSARA_FLEET_ID=your_fleet_id_here

# SiteFotos API Configuration (Forms & Photos)
SITEFOTOS_API_URL=https://api.sitefotos.com
SITEFOTOS_API_KEY=your_sitefotos_api_key_here
SITEFOTOS_PROJECT_ID=your_project_id_here

# SmartThings Configuration (Display Control)
SMARTTHINGS_TOKEN=your_smartthings_personal_access_token
SMARTTHINGS_LOCATION_ID=your_smartthings_location_id

# Display Device IDs (from SmartThings)
DISPLAY_1_ID=your_display_1_device_id
DISPLAY_2_ID=your_display_2_device_id  
DISPLAY_3_ID=your_display_3_device_id
DISPLAY_4_ID=your_display_4_device_id

# Optional: Logging
LOG_LEVEL=info
